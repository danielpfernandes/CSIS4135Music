@model IEnumerable<Music.Models.Genre>

@{
    ViewBag.Title = "Index";
}

<h2>Genres</h2>

<p>
    @Html.ActionLink("Create New Genre", "Create", null, new {@class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Name, "../Albums/ShowAlbumsByGenre", new { id = item.GenreID }, null)
        </td>
        <td class="btn-group btn-group-sm">
            @Html.ActionLink("Edit", "Edit", new { id = item.GenreID }, new { @class = "btn btn-warning", @style = "border-radius:6px 0 0 6px" })
            @Html.ActionLink("Delete", "Delete", new { id = item.GenreID }, new { @class = "btn btn-danger", @style = "border-radius:0 6px 6px 0" })

        </td>
    </tr>
}

</table>
