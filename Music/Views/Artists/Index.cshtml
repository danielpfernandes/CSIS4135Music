@model IEnumerable<Music.Models.Artist>

@{
    ViewBag.Title = "Artists List";
}

<h2>Artists List</h2>

<p>
    @Html.ActionLink("Create New Artist", "Create", null, new {@class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Name, "../Albums/ShowAlbumsByArtist", new { id = item.ArtistID }, null)
        </td>
    </tr>
}

</table>
